# Maintainer: Antoine Martin <antoine@ayakael.net>
pkgname=freshrss-wallabag
pkgver=1.0
pkgrel=1
pkgdesc="A digital audio manager built very specifically for my git-annex backed music collection"
url="https://github.com/ayakael/dam"
arch="noarch"
license="GAGPL-3.0-only"
depends="bash freshrss wallabag"
makedepends="bash coreutils findutils gawk git"
source="$pkgname-$pkgver.tar.gz"
_giturl="https://git.n7r.de/nrb/freshrss-wallabag.git"
_gittag="master"
builddir="$srcdir"
options="!check"

snapshot() {
	mkdir -p "$srcdir"
	cd "${SRCDEST:-$srcdir}"
	if ! [ -d $pkgname.git ]; then
		git clone $_giturl $pkgname.git || return 1
		cd $pkgname.git
	else
		cd $pkgname.git
		git fetch || return 1
	fi

	echo "Checking out"
	git checkout $_gittag
	echo "Repo archive"
	git archive --prefix="$pkgname/" -o ${pkgname}-${pkgver}.tar --format "tar" $_gittag
    
   
	gzip ${pkgname}-${pkgver}.tar -c > "$SRCDEST"/$pkgname-$pkgver.tar.gz
	ln -s "$SRCDEST"/$pkgname-$pkgver.tar.gz "$startdir"/$pkgname-$pkgver.tar.gz 
}

build() {
    return 0
}

package() {
	cd "$builddir"
	mkdir -p "${pkgdir}/usr/share/webapps/extensions"
	cp -R "${pkgname}" "${pkgdir}/usr/share/webapps/freshrss/extensions/"
}

sha512sums="6f7152f461f379c082357fa17fd4c56dd0129919d8527ffccaaeeb1bc63ec17a2c8d2a4cc9a9dd33bcc285ba3de692d534ad40867d7e0ade83aeeb0713a85d1d  freshrss-wallabag-1.0.tar.gz"

